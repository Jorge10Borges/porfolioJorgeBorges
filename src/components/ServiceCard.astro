---
interface Props {
  title: string;
  description: string;
  image: string;
}
const { title, description, image } = Astro.props;
---

<div class="bg-gray-800 text-white p-4 rounded-lg shadow-md w-full max-w-sm mx-auto" data-aos="flip-up">
  <img 
    src={image} 
    alt={title} 
    class="w-16 h-16 mb-4 mx-auto"
  />
  <h3 class="text-lg font-semibold text-center">{title}</h3>
  <p class="text-center pt-5">
    {description}
  </p>
</div>