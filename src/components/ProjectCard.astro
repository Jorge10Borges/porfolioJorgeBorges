---
interface Props {
  title: string;
  descriptionBreve: string;
  technologies: string[];
  image: string;
  slug: string | null;
}
const { title, descriptionBreve, technologies, image, slug } = Astro.props;
---

<div class="border border-gray-700 rounded-lg overflow-hidden bg-gray-900 flex flex-col h-full group">
  <a href={`/projects/${slug}`} >
    <img
      src={image} 
      alt={`Imagen de ${title}`} 
      class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300 cursor-pointer"
    />
  </a>
  <div class="p-6 flex flex-col h-full">
    <a href={`/projects/${slug}`} >
    <h3 class="text-xl font-semibold text-blue-400 group-hover:text-blue-200 transition-all duration-300 cursor-pointer">{title}</h3>
    </a>
    <p class="mt-2 text-gray-300 flex-1">{descriptionBreve}</p>
    <div class="mt-4 text-sm text-gray-500 left-0 bottom-0">
      <strong>Tecnología:</strong> {technologies.join(" / ")}
    </div>
    <!-- Enlace interno al detalle del proyecto -->
    {slug && (
      <div class="mt-4 ">
        <a 
          href={`/projects/${slug}`} 
          class="inline-block px-4 py-1 bg-blue-500 text-white text-sm rounded group-hover:bg-blue-600 transition cursor-pointer"
        >
          Ver detalles →
        </a>
      </div>
    )}
  </div>
</div>