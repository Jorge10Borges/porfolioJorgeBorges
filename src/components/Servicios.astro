---
import { services } from '../data/services.data';
import ServiceCard from './ServiceCard.astro';
---

<!-- Proyectos Destacados -->
<section data-aos="fade-up" class="py-16">
  <div class="container mx-auto px-4">
    <h2 class="col-span-full text-4xl font-bold mb-6 mt-12 text-center text-gray-400">Servicios</h2>
    <p class="mt-2 text-center text-gray-300 max-w-xl mx-auto">
      Servicios que ofrezco como desarrollador Full Stack desde VB5 hasta hoy.
    </p>

    <div class="mt-10 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-4 justify-items-center">
      {services.map((service) => (
        <ServiceCard 
          title={service.title}
          description={service.description}
          image={service.image}
        />
      ))}
    </div>

    <!-- Botón CTA -->
    <div class="mt-6 flex justify-center">
      <a href="/projects" class="inline-block px-5 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition">
        Ver más proyectos
      </a>
    </div>
  </div>
</section>
